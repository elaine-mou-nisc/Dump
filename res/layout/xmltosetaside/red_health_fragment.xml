<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_block"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/red_fragment_colors"
              android:clickable="true">
    <LinearLayout android:layout_width="105dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <ImageView android:id="@+id/health_image"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:layout_gravity="center"/>
        <TextView android:id="@+id/timestamp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="3dp"
                  android:layout_gravity="bottom"
                  android:gravity="left|bottom"
                  android:textColor="@color/pressed_red"
                  android:textSize="8dp"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:paddingLeft="15dp">
        <TextView android:id="@+id/status"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:textSize="18sp"
                  android:textColor="@color/pressed_red"
                  android:layout_gravity="center_horizontal"/>
        <TextView android:id="@+id/first_line"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:textSize="12sp"
                  android:textColor="@color/pressed_red"/>
        <TextView android:id="@+id/second_line"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:textSize="12sp"
                  android:textColor="@color/pressed_red"/>
        <TextView android:id="@+id/third_line"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:textSize="12sp"
                  android:textColor="@color/pressed_red"/>
    </LinearLayout>

</LinearLayout>